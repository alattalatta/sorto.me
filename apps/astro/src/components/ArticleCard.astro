---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props

const href = `/posts/${post.slug}`
---

<div aria-labelledby={post.slug}>
  <a aria-hidden href={href}>
    <Image alt="" class="thumbnail" loading="lazy" src={post.data.image} />
  </a>
  <a href={href}>
    <h2 id={post.slug}>{post.data.title}</h2>
  </a>
  <p>{post.data.description}</p>
</div>

<style>
  .thumbnail {
    width: 480px;
    max-width: 100%;
    height: 100%;

    aspect-ratio: 4 / 3;
    border: 5px solid var(--primary);
  }
</style>
