{
  "name": "@domain/blog",
  "version": "1.0.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "type": "module",
  "scripts": {
    "build": "pnpm tnode ./scripts/build.ts",
    "test": "ava --timeout=30s",
    "tnode": "NODE_OPTIONS='--experimental-specifier-resolution=node' ts-node --project tsconfig.script.json",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@swc/core": "^1.2.218",
    "@types/node": "16",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "ava": "^4.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@lib/functions": "workspace:*",
    "@lib/mdx": "workspace:*",
    "@lib/ui": "workspace:*",
    "@vanilla-extract/css": "^1.7.2",
    "clsx": "^1.2.1",
    "entities": "^4.3.1",
    "gray-matter": "^4.0.2",
    "next": "^12.2.2",
    "react-flip-toolkit": "^7.0.14"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--experimental-specifier-resolution=node",
      "--loader=ts-node/esm"
    ]
  }
}
