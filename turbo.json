{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "prebuild"]
    },
    "@apps/main#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "@domain/blog#build": {
      "dependsOn": ["^build"],
      "inputs": ["contents/**", "scripts/**"],
      "outputs": ["out/**"]
    },
    "@domain/docs#build": {
      "dependsOn": ["^build"],
      "inputs": ["contents/**", "scripts/**"],
      "outputs": ["out/**"]
    },
    "@lib/bcd#build": {
      "dependsOn": ["^build"],
      "inputs": ["package.json"],
      "outputs": ["css.json", "html.json"]
    },
    "dev": {
      "cache": false
    },
    "prebuild": {
      "dependsOn": ["^build"]
    },
    "@apps/main#prebuild": {
      "dependsOn": ["^build"],
      "inputs": ["scripts/**"],
      "outputs": ["public/rss.xml", "public/sitemap.md.xml"]
    },
    "test": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    }
  }
}
